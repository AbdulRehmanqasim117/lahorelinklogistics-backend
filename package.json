{
  "name": "lahorelink-backend",
  "version": "1.0.0",
  "description": "Backend API for LahoreLink Logistics",
  "main": "server.js",
  "scripts": {
    "start": "npm run prisma:deploy && node server.js",
    "dev": "nodemon server.js",
    "prisma:migrate": "prisma migrate dev --name init_mysql",
    "prisma:generate": "node node_modules/prisma/build/index.js generate",
    "prisma:deploy": "node node_modules/prisma/build/index.js migrate deploy",
    "build": "node -e \"const fs=require('fs');['build','dist'].forEach(d=>{try{fs.mkdirSync(d,{recursive:true});}catch(e){}})\" && npm run prisma:generate",
    "seed": "node prisma/seed.js",
    "postinstall": "npm run prisma:generate && npm run prisma:deploy && npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "googleapis": "^167.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.1.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0"
  }
}
