{
  "name": "lahorelink-backend",
  "version": "1.0.0",
  "description": "Backend API for LahoreLink Logistics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prisma:migrate": "prisma migrate dev --name init_mysql",
    "prisma:generate": "node node_modules/prisma/build/index.js generate",
    "prisma:deploy": "node node_modules/prisma/build/index.js migrate deploy",
    "build": "rm -rf dist && mkdir -p dist && cp -R server.js src prisma package.json package-lock.json dist/ && cp -R scripts dist/ 2>/dev/null || true && cp -R uploads dist/ 2>/dev/null || true && echo 'build complete' > dist/build.txt",
    "seed": "node prisma/seed.js",
    "postinstall": "npm run prisma:generate && npm run prisma:deploy && npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "googleapis": "^167.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.13",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0"
  }
}
