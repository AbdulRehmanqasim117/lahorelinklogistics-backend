# Core server
PORT=5000
MONGO_URI=
MONGO_URI_LOCAL=mongodb://your-mongodb-host:27017/lahore_link_logistics
DB_RETRY_MS=10000

# JWT
JWT_SECRET=change_me_super_secret
JWT_EXPIRES_IN=30d

# One-time CEO setup (do NOT commit real values)
# When performing initial setup, set:
#   SETUP_ENABLED=true
#   SETUP_KEY=a-long-random-secret
# After CEO account is created via POST /api/setup/ceo, set:
#   SETUP_ENABLED=false
SETUP_ENABLED=false
SETUP_KEY=

# URLs
# Public API base URL (used for webhooks, OAuth callbacks, absolute links)
API_BASE_URL=https://api.lahorelinklogistics.com

# Public frontend URL (used for redirects, password reset links, etc.)
FRONTEND_URL=https://lahorelinklogistics.com

# EmailJS for password reset emails (server-side)
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID_RESET=your_reset_template_id
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key
FROM_NAME=LahoreLink Logistics
FROM_EMAIL=lahorelinklogistics@gmail.com
# Google OAuth (if used)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
